<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@user.errors.count, "error") %>
			al intentar procesar el usuario:
		</h2>
		<p>Revise los siguientes campos: </p>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			  <li><%= message %>  </li>
			<% end %>
		</ul>
	</div>
	
<% end %>	